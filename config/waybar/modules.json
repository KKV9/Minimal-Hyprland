{
  "hyprland/workspaces": {
    "format": "{name}"
  },
  "group/audio": {
    "orientation": "horizontal",
    "modules": [
      "pulseaudio",
      "pulseaudio#microphone"
    ]
  },
  "clock": {
    "format": "{:%a %d | %H:%M}",
    "format-alt": "{:%A, %d %B, %Y (%R)}"
  },
  "hyprland/window": {
    "format": "{}",
    "separate-outputs": true,
    "rewrite": {
      "win11(.*)": " ",
      "(.*) - Rnote$": " ",
      "(.*) - Brave$": " $1",
      "(.*) - qutebrowser$": " $1",
      "nvim (.*)": "  $1",
      "nvim": " ",
      "System Monitor": " ",
      "Eye of GNOME": " ",
      "Catfish": " ",
      "Bluetooth Devices": " ",
      "Network Connections": " ",
      "Volume Control": " ",
      "ROG Control Center": "󰌢 ",
      "Audacity": "󰋌 ",
      "Qalculate!": "󰃬 ",
      "Krita": " ",
      "Lutris": " ",
      "uGet": " ",
      "nvtop": "󰡁 ",
      "wdisplays": "󱎴 ",
      "vim (.*)": "  $1",
      "vim": "",
      "vi (.*)": "  $1",
      "vi": " ",
      "cava": " ",
      "nwg-look": " ",
      "Kvantum Manager": " ",
      "Customize Look and Feel": " ",
      "Qt5 Configuration Tool": " ",
      "Qt6 Configuration Tool": " ",
      "Virtual Machine Manager": " ",
      "MySQL Workbench": " ",
      "htop": " ",
      "btop": " ",
      "~(.*)": " ",
      "/(.*)": " ",
      "yazi(.*)": "󰉋 $1",
      "(.*)Steam": "󰓓 "
    },
    "max-length": 50
  },
  "pulseaudio": {
    "format": "{icon} {volume}% ",
    "format-muted": "🔇 ",
    "format-icons": {
      "default": [
        "🔈",
        "🔉",
        "🔊"
      ]
    },
    "scroll-step": 5.0,
    "on-click": "pavucontrol",
    "on-click-right": "$HOME/.config/hypr/scripts/Volume.sh --toggle",
    "on-scroll-up": "$HOME/.config/hypr/scripts/Volume.sh --inc",
    "on-scroll-down": "$HOME/.config/hypr/scripts/Volume.sh --dec",
    "tooltip-format": "{icon} {desc} | {volume}% ",
    "smooth-scrolling-threshold": 1
  },
  "pulseaudio#microphone": {
    "format": "{format_source}",
    "format-source": "🎙️ {volume}%",
    "format-source-muted": " ",
    "on-click": "pavucontrol",
    "on-click-right": "$HOME/.config/hypr/scripts/Volume.sh --toggle-mic",
    "on-scroll-up": "$HOME/.config/hypr/scripts/Volume.sh --inc-mic",
    "on-scroll-down": "$HOME/.config/hypr/scripts/Volume.sh --dec-mic",
    "tooltip": false,
    "smooth-scrolling-threshold": 1
  },
  "tray": {
    "icon-size": 15,
    "spacing": 8
  },
  "battery": {
    "format": "{icon} {capacity}% ",
    "format-icons": [
      "🪫",
      "🔋"
    ],
    "format-time": "{H}h{M}m",
    "format-charging": "⚡ {capacity}% ",
    "format-not-charging": "⚡ {capacity}% ",
    "tooltip": "{time}",
    "interval": 30,
    "states": {
      "warning": 30,
      "critical": 10
    }
  },
  "custom/separator": {
    "format": " | ",
    "interval": "once",
    "tooltip": false
  }
}
